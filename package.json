{
  "private": true,
  "name": "tisane",
  "description": "Minimal type-safe testing",
  "version": "1.0.0",
  "main": "dist/tisane.js",
  "typings": "lib/index.d.ts",
  "author": "Chris Khoo",
  "license": "Apache2",
  "scripts": {
    "build": "tsc && tsc --project tsconfig.d.json && webpack",
    "lint": "tslint --project .",
    "test": "npm run build && npm run lint && jest",
    "watch": "npm-run-all --parallel watch:*",
    "watch:tsc": "tsc --watch",
    "watch:tscd": "tsc --project tsconfig.d.json --watch",
    "watch:test": "jest",
    "watch:webpack": "webpack --watch"
  },
  "devDependencies": {
    "@types/jest": "^18.1.1",
    "@types/node": "^7.0.5",
    "@types/webpack": "^2.2.6",
    "jest": "^18.1.0",
    "json": "^9.0.4",
    "npm-run-all": "^4.0.1",
    "tslint": "^4.4.2",
    "typescript": "^2.0.3",
    "webpack": "^2.2.1"
  }
}
